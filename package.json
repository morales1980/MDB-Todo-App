{
    "name": "todo-app",
    "version": "1.0.0",
    "description": "",
    "main": "index.html",
    "scripts": {
        "test": "npm-run-all test:*",
        "test:html": "globstar nu-html-checker *.html",
        "init-project": "npm install && npm-run-all init:*",
        "init:dirs": "mkdirp sass css vendor js",
        "init:files": "touch README.md index.html sass/main.scss js/script.js",
        "init:gitignore": "curl https://raw.githubusercontent.com/github/gitignore/master/Node.gitignore -o .gitignore",
        "build": "npm-run-all build:*",
        "build:sass": "node-sass --output-style expanded -o css src/sass",
        "build:autoprefixer": "autoprefixer-cli css/main.css",
        "build:babel": "babel src/js/script.js --out-file js/compiled.js",
        "watch": "npm-run-all build --parallel watch:*",
        "watch:sass": "node-sass --output-style expanded --source-map true -o css src/sass --watch",
        "watch:autoprefixer": "onchange -d 100 css/main.css -- autoprefixer-cli -o css/main.prefixed.css css/main.css",
        "watch:browser-sync": "browser-sync start --server --files css/*.css *.html",
        "watch:babel": "babel src/js/script.js --watch --out-file js/compiled.js"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@babel/cli": "^7.6.4",
        "@babel/core": "^7.6.4",
        "@babel/preset-env": "^7.6.3",
        "autoprefixer-cli": "^1.0.0",
        "browser-sync": "^2.26.3",
        "globstar": "^1.0.0",
        "mkdirp": "^0.5.1",
        "node-sass": "^7.0.0",
        "npm-run-all": "^4.1.5",
        "nu-html-checker": "^0.1.0",
        "onchange": "^5.1.3"
    },
    "dependencies": {}
}
